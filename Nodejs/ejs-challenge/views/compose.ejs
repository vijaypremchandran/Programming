<%# comment : Add the header from the template%>
<%- include("partials/header"); -%>

<h1> Compose </h1>

<%# comment : Form to get the blog%>


<form action="/compose" method="POST">
    <div class="form-group">
      <label for="title">Title</label>
      <input type="text" class="form-control" id="title" name="blogTitle" >
    </div>
    <div class="form-group">
      <label for="post">Post</label>
      <textarea class="form-control" id="post" rows="5" name="blogPost"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Publish</button>
</form>

<%# comment : Add the footer from the template %>
<%-  include("partials/footer"); -%>